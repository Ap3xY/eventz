<%= form_with(model: user, class: "w-full") do |f| %>
  <div class="w-full space-y-4">
    <%= render "shared/errors", object: user %>
    <div class="space-y-2">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, autofocus: true,
            class: "w-full mt-1 block rounded-md shadow-sm sm:text-sm #{user.errors[:name].any? ?
              'border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500' :
              'border-gray-300 focus:border-orange-500 focus:ring-orange-500'}" %>
      <% if user.errors[:name].any? %>
        <p class="mt-1 text-sm text-red-600"><%= user.errors[:name].to_sentence %></p>
      <% end %>
    </div>
    <div class="space-y-2">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email,
            class: "w-full mt-1 block rounded-md shadow-sm sm:text-sm #{user.errors[:email].any? ?
              'border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500' :
              'border-gray-300 focus:border-orange-500 focus:ring-orange-500'}" %>
      <% if user.errors[:email].any? %>
        <p class="mt-1 text-sm text-red-600"><%= user.errors[:email].to_sentence %></p>
      <% end %>
    </div>
    <div class="space-y-2">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password,
            class: "w-full mt-1 block rounded-md shadow-sm sm:text-sm #{user.errors[:password].any? ?
              'border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500' :
              'border-gray-300 focus:border-orange-500 focus:ring-orange-500'}" %>
      <% if user.errors[:password].any? %>
        <p class="mt-1 text-sm text-red-600"><%= user.errors[:password].to_sentence %></p>
      <% end %>
    </div>
    <div class="space-y-2">
      <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation,
            class: "w-full mt-1 block rounded-md shadow-sm sm:text-sm #{user.errors[:password_confirmation].any? ?
              'border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500' :
              'border-gray-300 focus:border-orange-500 focus:ring-orange-500'}" %>
      <% if user.errors[:password_confirmation].any? %>
        <p class="mt-1 text-sm text-red-600"><%= user.errors[:password_confirmation].to_sentence %></p>
      <% end %>
    </div>
    <div class="mt-6">
      <% if user.new_record? %>
        <%= f.submit "Create Account", class: "w-full px-4 py-2 text-sm font-medium text-white bg-orange-600 rounded-md hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
      <% else %>
        <%= f.submit "Update Account", class: "w-full px-4 py-2 text-sm font-medium text-white bg-orange-600 rounded-md hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
      <% end %>
    </div>
  </div>
<% end %>
