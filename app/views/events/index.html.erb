<% @events.each do |event| %>
      <section class="event">
        <div>
          <h2><%= event.name %></h2>
          <h3><%= day_and_time(event) %> in <%= event.location %></h3>
          <%= price(event) %>
          <span class="price"> <%= truncate(event.description, length: 35, separator: " ") %></span>
        </div>
      </section>
<% end%>