<section class="flex max-w-6xl xl:min-w-[82rem] p-10 mx-4 mb-10 shadow-xl rounded-xl">
  <div class="w-full">
    <div class="flex-shrink-0 w-12 h-12 mb-4">
      <%= image_tag @event.image_file_name, class: "w-full h-full object-cover" %>
    </div>
    <h1 class="text-2xl"><%= @event.name %></h1>
    <h2 class="mb-2 text-xl font-bold text-zinc-500"><%= pluralize(@event.spots_left, "spot") %> remaining &bull; <%= price(@event) %></h2>
    <h3 class="mb-4 text-lg text-zinc-600"><%= day_and_time(@event) %> in <%= @event.location %></h3>
    <p class="mb-6 break-words whitespace-normal overflow-wrap-normal">
      <%= @event.description %>
    </p>
    <div class="space-x-4">
      <%= link_to 'View Registrations', event_registrations_path(@event), class: "inline-block py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors duration-200" %>
      <%= register_or_sold_out(@event) %>
    </div>
  </div>
</section>

<section class="max-w-6xl xl:min-w-[82rem] p-6 mx-4 mb-10 bg-gray-50 rounded-xl">
  <h2 class="mb-4 text-xl font-semibold text-gray-700">Liked by <%= pluralize(@likers.count, 'person') %></h2>
  <div class="flex flex-wrap gap-4">
    <% @likers.each do |liker| %>
      <div class="flex items-center gap-2 p-2 bg-white rounded-lg shadow-sm">
        <span class="text-sm text-gray-700"><%= liker.name %></span>
      </div>
    <% end %>
  </div>
</section>

<% if current_user_admin? %>
  <section class="pt-10 mx-4 text-center border-t-2 border-gray-400 border-dashed">
    <%= link_to 'Edit', edit_event_path(@event), class: "py-2 px-3 bg-gray-500 rounded-md text-white" %>
    <%= link_to 'Delete', @event, class: "py-2 px-3 bg-gray-500 rounded-md text-white", data: { turbo_method: :delete, turbo_confirm: "Really?!"} %>
  </section>
<% end %>